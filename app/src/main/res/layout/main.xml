<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009900"
        android:gravity="center"
        android:text="Online Registration"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:hint="Enter your name"
        android:inputType="text"
        android:textSize="20sp" />

    <!-- Courses -->
    <CheckBox
        android:id="@+id/checkbox_course1"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Mobile Application Development"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_course2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Business Process for Computing System"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_course3"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Networking 1"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_course4"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Physics"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_course5"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Web Design"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="Total:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="0"
        android:textSize="34sp" />

    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="Confirm" />

    <!-- Confirmation Section -->
    <LinearLayout
        android:id="@+id/confirmation_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/name_display"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/courses_display"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Courses: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_display"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Total Paid: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/enrollment_status"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="Enrolled"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingTop="16dp" />
    </LinearLayout>
</LinearLayout>
